<?xml version="1.0" encoding="UTF-8" ?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.1.xsd">


<!--    enabling the annotation-->
    <context:annotation-config />

    <bean class="org.annotationDemo.Address" name="address1">
        <property name="street" value="1000 N. 4th St"/>
        <property name="city" value="Fairfield"/>
    </bean>

    <bean class="org.annotationDemo.Address" name="address2">
        <property name="street" value="second street" />
        <property name="city" value="second city" />
    </bean>

    <bean class="org.annotationDemo.Employee" name="empbean" />

</beans>